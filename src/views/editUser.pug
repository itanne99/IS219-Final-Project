extends layout

block content
    .container
        form(action=`/api/edit/${list[0].id}` method='POST')
            .form-group.row
                label(for='first_name') First Name:
                input#first_name.form-control(type='text' name='first_name' placeholder='' value=`${list[0].first_name}`)
            .form-group.row
                label(for='last_name') Last Name:
                input#last_name.form-control(type='text' name='last_name' placeholder='' value=`${list[0].last_name}`)
            .form-group.row
                label(for='email') Email:
                input#email.form-control(type='email' name='email' placeholder='' value=`${list[0].email}`)
            .form-group.row
                label(for='phone') Phone:
                input#phone.form-control(type='text' name='phone' placeholder='' value=`${list[0].phone}`)
            .form-group.row
                label(for='street_address') Street Address:
                input#street_address.form-control(type='text' name='street_address' placeholder='' value=`${list[0].street_address}`)
            .form-group.row
                label(for='city') City:
                input#city.form-control(type='text' name='city' placeholder='' value=`${list[0].city}`)
            .form-group.row
                label(for='state') State:
                input#state.form-control(type='text' name='state' placeholder='' value=`${list[0].state}`)
            .form-group.row
                button.btn.btn-primary(type='submit') Add
