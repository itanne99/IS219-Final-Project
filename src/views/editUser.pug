extends layout

block content
    .container
        form(action='/api/edit/'+data.id method='POST')
            .form-group.row
                label(for='first_name') First Name:
                input#first_name.form-control(type='text' name='first_name' placeholder='' value=data.first_name)
            .form-group.row
                label(for='last_name') Last Name:
                input#last_name.form-control(type='text' name='last_name' placeholder='' value=data.last_name)
            .form-group.row
                label(for='email') Email:
                input#email.form-control(type='email' name='email' placeholder='' value=data.email)
            .form-group.row
                label(for='phone') Phone:
                input#phone.form-control(type='text' name='phone' placeholder='' value=data.phone)
            .form-group.row
                label(for='street_address') Street Address:
                input#street_address.form-control(type='text' name='street_address' placeholder='' value=data.street_address)
            .form-group.row
                label(for='city') City:
                input#city.form-control(type='text' name='city' placeholder='' value=data.city)
            .form-group.row
                label(for='state') State:
                input#state.form-control(type='text' name='state' placeholder='' value=data.state)
            .form-group.row
                div
                    button.btn.btn-primary(type='submit') Add