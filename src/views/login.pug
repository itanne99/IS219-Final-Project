extends layout

block content
    if message
        div(class=`alert ${messageClass}`)
            span #{message}
    form(method='POST' action='/login')
        .form-group
            label(for='exampleInputEmail1') Email address
            input#exampleInputEmail1.form-control(name='email' type='email' placeholder='Enter email')
        .form-group
            label(for='exampleInputPassword1') Password
            input#exampleInputPassword1.form-control(name='password' type='password' placeholder='Password')
        button.btn.btn-primary(type='submit') Login