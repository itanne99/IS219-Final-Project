extends layout

block content
    .container
        table.table
            thead
                tr
                    th First Name
                    th Last Name
                    th Email
                    th Phone
                    th Street Address
                    th City
                    th State
                    th
                    th
                        a.btn.btn-success.w-100(href='/form' role='button') New
            tbody
                each item in list
                    tr
                        td #{item.first_name}
                        td #{item.last_name}
                        td #{item.email}
                        td #{item.phone}
                        td #{item.street_address}
                        td #{item.city}
                        td #{item.state}
                        td
                            a.btn.btn-primary(href=`/form?id=${item.id}` role='button') Edit
                        td
                            a.btn.btn-danger(href=`/api/delete/${item.id}` role='button') Delete